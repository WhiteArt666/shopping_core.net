@using shopping_tutorial.Models
@using System.Linq
@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "So sánh sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var key = 0;
}

<link href="~/css/user-pages.css" rel="stylesheet" />

<div class="user-page-container">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header text-center fade-in-up">
            <h1>
                <i class="fas fa-balance-scale me-3"></i>
                So Sánh Sản Phẩm
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a href="/" class="text-white-50">Trang chủ</a></li>
                    <li class="breadcrumb-item active">So sánh</li>
                </ol>
            </nav>
        </div>

        <!-- Compare Content -->
        <div class="row">
            <div class="col-12">
                <div class="modern-card fade-in-up">
                    @if (Model.Any())
                    {
                        <div class="modern-card-body p-0">
                            <div class="table-responsive">
                                <table class="cart-table table mb-0" id="myTable">
                                    <thead>
                                        <tr>
                                            <th><i class="fas fa-hashtag me-2"></i>STT</th>
                                            <th><i class="fas fa-image me-2"></i>Ảnh Sản Phẩm</th>
                                            <th><i class="fas fa-tag me-2"></i>Tên Sản Phẩm</th>
                                            <th><i class="fas fa-dollar-sign me-2"></i>Giá Sản Phẩm</th>
                                            <th><i class="fas fa-heart me-2"></i>Yêu thích</th>
                                            <th><i class="fas fa-shopping-cart me-2"></i>Thêm giỏ hàng</th>
                                            <th><i class="fas fa-cogs me-2"></i>Hành Động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var compare_product in Model)
                                        {
                                            key++;
                                            <tr class="align-middle">
                                                <td class="text-center"><strong>@key</strong></td>
                                                <td class="text-center">
                                                    <img src="~/media/products/@compare_product.Product.Image" 
                                                         class="product-image img-thumbnail" 
                                                         alt="@compare_product.Product.Name"
                                                         width="80px" height="100px">
                                                </td>
                                                <td>
                                                    <h6 class="product-name mb-1">@compare_product.Product.Name</h6>
                                                    <small class="text-muted">Đang so sánh</small>
                                                </td>
                                                <td class="text-center">
                                                    <span class="price-badge">@compare_product.Product.Price.ToString("#,##0 VNĐ")</span>
                                                </td>
                                                <td class="text-center">
                                                    <a asp-action="AddWishlist" asp-controller="Home" asp-route-Id="@compare_product.Product.Id" 
                                                       class="action-btn text-decoration-none btn-sm" 
                                                       style="background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%); color: white; border: none;">
                                                        <i class="fas fa-heart me-1"></i>Yêu thích
                                                    </a>
                                                </td>
                                                <td class="text-center">
                                                    <a asp-action="AddCart" asp-controller="Cart" asp-route-Id="@compare_product.Product.Id" 
                                                       class="action-btn-primary text-decoration-none btn-sm">
                                                        <i class="fas fa-cart-plus me-1"></i>Thêm giỏ hàng
                                                    </a>
                                                </td>
                                                <td class="text-center">
                                                    <a class="action-btn btn-remove confirmDeletion" 
                                                       asp-action="DeleteCompare" asp-controller="Home" 
                                                       asp-route-Id="@compare_product.Compares.Id"
                                                       onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này khỏi danh sách so sánh?')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                        <!-- Compare Summary -->
                        <div class="modern-card-body border-top">
                            <div class="row text-center">
                                <div class="col-md-4">
                                    <div class="compare-stat">
                                        <i class="fas fa-chart-bar fa-2x text-primary mb-2"></i>
                                        <h5>@Model.Count() sản phẩm</h5>
                                        <p class="text-muted">Đang so sánh</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="compare-stat">
                                        <i class="fas fa-dollar-sign fa-2x text-success mb-2"></i>
                                        <h5>
                                            @{
                                                var prices = new List<decimal>();
                                                foreach(var item in Model) {
                                                    prices.Add(item.Product.Price);
                                                }
                                                var minPrice = prices.Count > 0 ? prices.Min() : 0;
                                                var maxPrice = prices.Count > 0 ? prices.Max() : 0;
                                            }
                                            @minPrice.ToString("#,##0") - @maxPrice.ToString("#,##0") VNĐ
                                        </h5>
                                        <p class="text-muted">Khoảng giá</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="compare-stat">
                                        <i class="fas fa-star fa-2x text-warning mb-2"></i>
                                        <h5>So sánh chi tiết</h5>
                                        <p class="text-muted">Tìm sản phẩm phù hợp</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="modern-card-body">
                            <div class="empty-cart">
                                <div class="empty-cart-icon">
                                    <i class="fas fa-balance-scale"></i>
                                </div>
                                <h4>Danh sách so sánh trống</h4>
                                <p>Bạn chưa có sản phẩm nào để so sánh!</p>
                                <a asp-action="Index" asp-controller="Home" class="continue-shopping">
                                    <i class="fas fa-shopping-bag me-2"></i>Khám phá sản phẩm
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable if there are items
            @if (Model.Any())
            {
                <text>
                $('#myTable').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Vietnamese.json"
                    },
                    "pageLength": 10,
                    "responsive": true,
                    "order": [[ 0, "asc" ]]
                });
                </text>
            }

            // Add animation for buttons
            $('.btn-add-cart, .btn-add-wishlist').on('click', function() {
                var btn = $(this);
                var originalText = btn.html();
                var isWishlist = btn.hasClass('btn-add-wishlist');
                
                btn.html('<i class="fas fa-spinner fa-spin me-1"></i>' + (isWishlist ? 'Đang thêm...' : 'Đang thêm...'));
                btn.prop('disabled', true);
                
                setTimeout(function() {
                    btn.html('<i class="fas fa-check me-1"></i>' + (isWishlist ? 'Đã thêm!' : 'Đã thêm!'));
                    btn.removeClass(isWishlist ? 'btn-add-wishlist' : 'action-btn-primary').addClass('btn-success');
                    
                    setTimeout(function() {
                        btn.html(originalText);
                        btn.removeClass('btn-success').addClass(isWishlist ? 'btn-add-wishlist' : 'action-btn-primary');
                        btn.prop('disabled', false);
                    }, 2000);
                }, 1000);
            });
        });
    </script>
}