@using shopping_tutorial.Models
@using System.Linq
@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Danh sách yêu thích";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var key = 0;
}

<link href="~/css/user-pages.css" rel="stylesheet" />

<div class="user-page-container">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header text-center fade-in-up">
            <h1>
                <i class="fas fa-heart me-3"></i>
                Danh Sách Yêu Thích
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    <li class="breadcrumb-item"><a href="/" class="text-white-50">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Yêu thích</li>
                </ol>
            </nav>
        </div>

        <!-- Wishlist Content -->
        <div class="row">
            <div class="col-12">
                <div class="modern-card fade-in-up">
                    @if (Model.Any())
                    {
                        <div class="modern-card-body p-0">
                            <div class="table-responsive">
                                <table class="cart-table table mb-0" id="myTable">
                                    <thead>
                                        <tr>
                                            <th><i class="fas fa-hashtag me-2"></i>STT</th>
                                            <th><i class="fas fa-image me-2"></i>Ảnh Sản Phẩm</th>
                                            <th><i class="fas fa-tag me-2"></i>Tên Sản Phẩm</th>
                                            <th><i class="fas fa-dollar-sign me-2"></i>Giá Sản Phẩm</th>
                                            <th><i class="fas fa-shopping-cart me-2"></i>Thêm giỏ hàng</th>
                                            <th><i class="fas fa-cogs me-2"></i>Hành Động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var wishlist_product in Model)
                                        {
                                            key++;
                                            <tr class="align-middle">
                                                <td class="text-center"><strong>@key</strong></td>
                                                <td class="text-center">
                                                    <img src="~/media/products/@wishlist_product.Product.Image" 
                                                         class="product-image img-thumbnail" 
                                                         alt="@wishlist_product.Product.Name"
                                                         width="80px" height="100px">
                                                </td>
                                                <td>
                                                    <h6 class="product-name mb-1">@wishlist_product.Product.Name</h6>
                                                    <small class="text-muted">Đã thêm vào danh sách yêu thích</small>
                                                </td>
                                                <td class="text-center">
                                                    <span class="price-badge">@wishlist_product.Product.Price.ToString("#,##0 VNĐ")</span>
                                                </td>
                                                <td class="text-center">
                                                    <a asp-action="AddCart" asp-controller="Cart" asp-route-Id="@wishlist_product.Product.Id" 
                                                       class="action-btn-primary text-decoration-none btn-sm">
                                                        <i class="fas fa-cart-plus me-1"></i>Thêm giỏ hàng
                                                    </a>
                                                </td>
                                                <td class="text-center">
                                                    <a class="action-btn btn-remove confirmDeletion" 
                                                       asp-action="DeleteWishlist" asp-controller="Home" 
                                                       asp-route-Id="@wishlist_product.Wishlists.Id"
                                                       onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này khỏi danh sách yêu thích?')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="modern-card-body">
                            <div class="empty-cart">
                                <div class="empty-cart-icon">
                                    <i class="fas fa-heart-broken"></i>
                                </div>
                                <h4>Danh sách yêu thích trống</h4>
                                <p>Bạn chưa có sản phẩm nào trong danh sách yêu thích!</p>
                                <a asp-action="Index" asp-controller="Home" class="continue-shopping">
                                    <i class="fas fa-shopping-bag me-2"></i>Khám phá sản phẩm
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable if there are items
            @if (Model.Any())
            {
                <text>
                $('#myTable').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Vietnamese.json"
                    },
                    "pageLength": 10,
                    "responsive": true,
                    "order": [[ 0, "asc" ]]
                });
                </text>
            }

            // Add to cart success animation
            $('.btn-add-cart').on('click', function() {
                var btn = $(this);
                var originalText = btn.html();
                
                btn.html('<i class="fas fa-spinner fa-spin me-1"></i>Đang thêm...');
                btn.prop('disabled', true);
                
                setTimeout(function() {
                    btn.html('<i class="fas fa-check me-1"></i>Đã thêm!');
                    btn.removeClass('action-btn-primary').addClass('btn-success');
                    
                    setTimeout(function() {
                        btn.html(originalText);
                        btn.removeClass('btn-success').addClass('action-btn-primary');
                        btn.prop('disabled', false);
                    }, 2000);
                }, 1000);
            });
        });
    </script>
}