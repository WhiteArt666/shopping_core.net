        // Flash Sale Countdown Timer
        function initFlashSaleCountdown() {
            // Set countdown target date (24 hours from now)
            const targetDate = new Date().getTime() + (24 * 60 * 60 * 1000);
            
            const countdown = setInterval(function() {
                const now = new Date().getTime();
                const distance = targetDate - now;
                
                if (distance < 0) {
                    clearInterval(countdown);
                    $('.ul-flash-sale-countdown .number').text('00');
                    return;
                }
                
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                
                $('.ul-flash-sale-countdown .days').text(days.toString().padStart(2, '0'));
                $('.ul-flash-sale-countdown .hours').text(hours.toString().padStart(2, '0'));
                $('.ul-flash-sale-countdown .minutes').text(minutes.toString().padStart(2, '0'));
                $('.ul-flash-sale-countdown .seconds').text(seconds.toString().padStart(2, '0'));
            }, 1000);
        }

