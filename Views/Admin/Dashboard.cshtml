@model shopping_tutorial.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Dashboard</h2>

<div class="row">
    <div class="col-md-6">
        <h5>Doanh thu theo tháng</h5>
        <canvas id="revenueChart" height="100"></canvas>
    </div>
    <div class="col-md-6">
        <h5>Đơn hàng theo tháng</h5>
        <canvas id="orderChart" height="100"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const months = [...Array(12).keys()].map(i => i + 1);

        const revenueData = months.map(m => @Model.RevenueByMonth.GetValueOrDefault(m, 0));
        const ordersData = months.map(m => @Model.OrdersByMonth.GetValueOrDefault(m, 0));

        new Chart(document.getElementById('revenueChart'), {
            type: 'bar',
            data: {
                labels: months.map(m => `Tháng ${m}`),
                datasets: [{
                    label: 'Doanh thu (VNĐ)',
                    data: revenueData,
                    backgroundColor: 'rgba(75, 192, 192, 0.6)'
                }]
            }
        });

        new Chart(document.getElementById('orderChart'), {
            type: 'line',
            data: {
                labels: months.map(m => `Tháng ${m}`),
                datasets: [{
                    label: 'Số đơn hàng',
                    data: ordersData,
                    borderColor: 'rgba(255, 99, 132, 0.6)',
                    fill: false
                }]
            }
        });
    </script>
}
