@using shopping_tutorial.Models
@model IEnumerable<shopping_tutorial.Models.ProductModel>
@{
    var keyword = ViewBag.Keyword ?? "";
    ViewData["Title"] = "Kết quả tìm kiếm" + (string.IsNullOrEmpty(keyword) ? "" : " - " + keyword);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/user-pages.css" rel="stylesheet" />

<style>
    /* Search specific styles */
    .search-results-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        padding: 20px 0;
        margin-top: -20px;
    }

    .search-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem 0;
        margin-bottom: 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
    }

    .search-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" fill="rgba(255,255,255,0.1)"><polygon points="1000,100 1000,0 0,100"/></svg>');
        background-size: cover;
    }

    .search-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        position: relative;
        z-index: 1;
    }

    .search-results-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 2rem;
    }

    .product-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .product-image-container {
        position: relative;
        height: 250px;
        overflow: hidden;
        background: #f8f9ff;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.05);
    }

    .product-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .product-link:hover {
        text-decoration: none;
        color: inherit;
    }

    .product-link:hover .product-name {
        color: #667eea;
        transition: color 0.3s ease;
    }

    .product-info {
        padding: 1.5rem;
        padding-bottom: 1rem;
    }

    .product-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-price {
        font-size: 1.3rem;
        font-weight: 700;
        color: #667eea;
        margin-bottom: 0.5rem;
    }

    .product-meta {
        margin-bottom: 1rem;
    }

    .product-category,
    .product-brand {
        display: inline-block;
        background: linear-gradient(135deg, #e8f1ff 0%, #f0f8ff 100%);
        color: #667eea;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 0.8rem;
        margin-right: 8px;
        margin-bottom: 4px;
    }

    .product-actions {
        display: flex;
        gap: 8px;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #f0f0f0;
    }

    .btn-add-cart {
        flex: 1;
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
    }

    .btn-add-cart:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(40,167,69,0.3);
        color: white;
    }

    .btn-add-cart:disabled {
        background: linear-gradient(135deg, #6c757d 0%, #5a6268 100%);
        cursor: not-allowed;
        transform: none;
    }

    .btn-add-cart:disabled:hover {
        transform: none;
        box-shadow: none;
    }

    .btn-wishlist,
    .btn-compare {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 10px;
        border-radius: 8px;
        transition: all 0.3s ease;
        min-width: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-wishlist:hover,
    .btn-compare:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102,126,234,0.3);
        color: white;
    }

    .search-stats {
        background: white;
        padding: 1rem 1.5rem;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        margin-bottom: 1.5rem;
    }

    .no-results {
        text-align: center;
        padding: 3rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    }

    .no-results-icon {
        font-size: 4rem;
        color: #667eea;
        margin-bottom: 1rem;
    }

    /* Stock status */
    .out-of-stock {
        position: absolute;
        top: 10px;
        right: 10px;
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .in-stock {
        position: absolute;
        top: 10px;
        right: 10px;
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    /* Animation keyframes */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .fade-in-up {
        opacity: 0;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .search-results-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 15px;
        }
        
        .product-info {
            padding: 1rem;
        }
        
        .search-header h1 {
            font-size: 1.5rem;
        }
    }

    @@media (max-width: 576px) {
        .search-results-grid {
            grid-template-columns: 1fr;
        }
        
        .product-actions {
            flex-direction: column;
        }
        
        .btn-wishlist,
        .btn-compare {
            min-width: auto;
        }
    }
</style>

<div class="search-results-container">
    <div class="ul-container">
        <!-- Search Header -->
        <div class="search-header text-center fade-in-up">
            <h1>
                <i class="fas fa-search me-3"></i>
                @if (!string.IsNullOrEmpty(keyword))
                {
                    <text>Kết quả tìm kiếm: "@keyword"</text>
                }
                else
                {
                    <text>Tất cả sản phẩm</text>
                }
            </h1>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Search Stats -->
            <div class="search-stats fade-in-up">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">
                        <i class="fas fa-info-circle me-2"></i>
                        Tìm thấy <strong>@Model.Count()</strong> sản phẩm
                    </span>
                    <span class="text-muted">
                        <i class="fas fa-clock me-2"></i>
                        Cập nhật: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                    </span>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="search-results-grid fade-in-up">
                @foreach (var item in Model)
                {
                    <div class="product-card">
                        <a href="@Url.Action("Details", "Product", new { id = item.Id })" class="product-link">
                            <div class="product-image-container">
                                <img src="~/media/products/@(item.Image ?? "default.jpg")" alt="@(item.Name ?? "Sản phẩm")" class="product-image" />
                                
                                @if (item.Quantity == 0)
                                {
                                    <span class="out-of-stock">
                                        <i class="fas fa-times me-1"></i>Hết hàng
                                    </span>
                                }
                                else
                                {
                                    <span class="in-stock">
                                        <i class="fas fa-check me-1"></i>Còn hàng
                                    </span>
                                }
                            </div>

                            <div class="product-info">
                                <h3 class="product-name">@(item.Name ?? "Tên sản phẩm")</h3>
                            <div class="product-price">@(item.Price.ToString("#,##0 VNĐ"))</div>
                            
                            <div class="product-meta">
                                @if (item.Category != null)
                                {
                                    <span class="product-category">
                                        <i class="fas fa-tag me-1"></i>@item.Category.Name
                                    </span>
                                }
                                @if (item.Brand != null)
                                {
                                    <span class="product-brand">
                                        <i class="fas fa-award me-1"></i>@item.Brand.Name
                                    </span>
                                }
                            </div>
                        </a>

                        <div class="product-info">
                            <div class="product-actions">
                                @if (item.Quantity == 0)
                                {
                                    <button type="button" class="btn-add-cart" disabled>
                                        <i class="fas fa-times me-2"></i>Hết hàng
                                    </button>
                                }
                                else
                                {
                                    <button class="btn-add-cart add-to-cart" data-product_id="@item.Id">
                                        <i class="fas fa-shopping-cart me-2"></i>Thêm giỏ hàng
                                    </button>
                                }
                                
                                <button class="btn-wishlist" title="Thêm yêu thích">
                                    <i class="fas fa-heart"></i>
                                </button>
                                
                                <button class="btn-compare" title="So sánh">
                                    <i class="fas fa-balance-scale"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- No Results -->
            <div class="no-results fade-in-up">
                <div class="no-results-icon">
                    <i class="fas fa-search-minus"></i>
                </div>
                <h4>Không tìm thấy sản phẩm nào</h4>
                @if (!string.IsNullOrEmpty(keyword))
                {
                    <p>Không có sản phẩm nào phù hợp với từ khóa "<strong>@keyword</strong>"</p>
                }
                else
                {
                    <p>Hiện tại chưa có sản phẩm nào</p>
                }
                <p class="text-muted">Vui lòng thử lại với từ khóa khác hoặc tham khảo các sản phẩm khác</p>
                <a href="@Url.Action("Index", "Home")" class="btn-add-cart" style="display: inline-flex; text-decoration: none;">
                    <i class="fas fa-home me-2"></i>Về trang chủ
                </a>
            </div>
        }
    </div>
</div>

<script>
$(document).ready(function () {
    // Add to cart functionality
    $('.add-to-cart').click(function () {
        var productId = $(this).data('product_id');
        var button = $(this);
        
        button.prop('disabled', true);
        button.html('<i class="fas fa-spinner fa-spin me-2"></i>Đang thêm...');
        
        $.ajax({
            url: '/Cart/Add',
            type: 'POST',
            data: { Id: productId },
            success: function (response) {
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Thành công!',
                        text: 'Sản phẩm đã được thêm vào giỏ hàng',
                        showConfirmButton: false,
                        timer: 1500
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi!',
                        text: response.message || 'Không thể thêm sản phẩm vào giỏ hàng'
                    });
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi!',
                    text: 'Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng'
                });
            },
            complete: function () {
                button.prop('disabled', false);
                button.html('<i class="fas fa-shopping-cart me-2"></i>Thêm giỏ hàng');
            }
        });
    });
    
    // Wishlist functionality
    $('.btn-wishlist').click(function () {
        Swal.fire({
            icon: 'info',
            title: 'Tính năng yêu thích',
            text: 'Tính năng này sẽ được cập nhật sớm!',
            showConfirmButton: false,
            timer: 1500
        });
    });
    
    // Compare functionality
    $('.btn-compare').click(function () {
        Swal.fire({
            icon: 'info',
            title: 'Tính năng so sánh',
            text: 'Tính năng này sẽ được cập nhật sớm!',
            showConfirmButton: false,
            timer: 1500
        });
    });
    
    // Add fade-in animation on load
    $('.fade-in-up').each(function(index) {
        $(this).css({
            'animation-delay': (index * 0.1) + 's',
            'animation': 'fadeInUp 0.6s ease forwards'
        });
    });
});
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $('.add-to-cart').click(function () {
            var Id = $(this).data("product_id");

            //alert(product_id);

            $.ajax({
                type: "POST",
                url: "@Url.Action("Add", "Cart")",
                data: { Id: Id }, // Send data to the server

                success: function (result) {
                    // Handle successful update
                    if (result) {

                        Swal.fire("Thêm giỏ hàng thành công.");
                    }
                }

            });
        });
    </script>
}