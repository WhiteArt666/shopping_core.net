@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-success">
                <div class="card-header bg-success text-white text-center">
                    <h4><i class="fas fa-check-circle me-2"></i>Đặt hàng thành công!</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-shopping-bag text-success" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h5 class="text-success mb-3">Cảm ơn bạn đã đặt hàng!</h5>
                    
                    <p class="mb-3">
                        Đơn hàng của bạn đã được tạo thành công và đang chờ xử lý.
                    </p>
                    
                    @if (ViewBag.OrderCode != null)
                    {
                        <div class="alert alert-info">
                            <strong>Mã đơn hàng:</strong> @ViewBag.OrderCode
                        </div>
                    }
                    
                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <i class="fas fa-truck text-primary mb-2" style="font-size: 2rem;"></i>
                                    <h6>Giao hàng</h6>
                                    <small class="text-muted">Đơn hàng sẽ được giao trong 2-3 ngày làm việc</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <i class="fas fa-gift text-warning mb-2" style="font-size: 2rem;"></i>
                                    <h6>Tích điểm</h6>
                                    <small class="text-muted">Điểm thưởng sẽ được cộng sau khi hoàn thành đơn hàng</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                            <i class="fas fa-home me-1"></i>Về trang chủ
                        </a>
                        <a href="@Url.Action("History", "Account")" class="btn btn-outline-secondary">
                            <i class="fas fa-history me-1"></i>Xem đơn hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .bg-light .card-body {
        transition: transform 0.2s;
    }
    
    .bg-light .card-body:hover {
        transform: translateY(-2px);
    }
</style>
