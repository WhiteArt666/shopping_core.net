
@model shopping_tutorial.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <!-- BREADCRUMB SECTION START -->
    <div class="ul-container">
        <div class="ul-breadcrumb">
            <h2 class="ul-breadcrumb-title">Log In</h2>
            <div class="ul-breadcrumb-nav">
                <a href="/"><i class="flaticon-home"></i> Home</a>
                <i class="flaticon-arrow-point-to-right"></i>
                <span class="current-page">Log In</span>
            </div>
        </div>
    </div>
    <!-- BREADCRUMB SECTION END -->

    <!-- LOGIN SECTION -->
    <div class="ul-container">
        <div class="ul-login">
            <div class="ul-inner-page-container">
                <div class="row justify-content-evenly align-items-center flex-column-reverse flex-md-row">
                    <div class="col-md-5">
                        <div class="ul-login-img text-center">
                            <img src="~/assets/img/login-img.svg" alt="Login Image">
                        </div>
                    </div>

                    <div class="col-xl-4 col-md-7">
                        @if (ViewContext.HttpContext.Request.Query.ContainsKey("error"))
                        {
                            var error = ViewContext.HttpContext.Request.Query["error"].ToString();
                            if (error == "google_failed")
                            {
                                <div class="alert alert-danger">
                                    Đăng nhập bằng Google thất bại. Vui lòng thử lại hoặc sử dụng email/mật khẩu.
                                </div>
                            }
                        }

                        <form asp-action="Login" asp-controller="Account" class="ul-contact-form" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group">
                                <div class="position-relative">
                                    <input asp-for="Username" placeholder="Enter Email Address" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="position-relative">
                                    <input asp-for="Password" type="password" placeholder="Enter Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <button type="submit">Log In</button>
                        </form>

                        <div class="text-center my-3">Hoặc</div>

                        <!-- Nút đăng nhập bằng Google -->
                        <form asp-action="ExternalLogin" asp-controller="Account" method="post">
                            <input type="hidden" name="provider" value="Google" />
                            <input type="hidden" name="returnUrl" value="/" />
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="fab fa-google"></i> Đăng nhập bằng Google
                            </button>
                        </form>

                        <p class="text-center mt-4 mb-0">Don't have an account? 
                            <a asp-action="Create" asp-controller="Account">Sign Up</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}