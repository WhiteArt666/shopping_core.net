@model shopping_tutorial.Models.SizeModel
@{
    ViewData["Title"] = "Chỉnh sửa size";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Chỉnh sửa size</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Tên size</label>
                        <input asp-for="Name" class="form-control" placeholder="Ví dụ: S, M, L, XL, 38, 39, 40..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Mô tả (tùy chọn)</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả về size..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Cập nhật size
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
