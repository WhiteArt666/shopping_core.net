@model IEnumerable<shopping_tutorial.Models.SizeModel>
@{
    ViewData["Title"] = "Quản lý size";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h4>Danh sách size</h4>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Thêm size
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Tên size</th>
                                    <th>Mô tả</th>
                                    <th>Ngày tạo</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var size in Model)
                                {
                                    <tr>
                                        <td>@size.Id</td>
                                        <td>
                                            <span class="badge bg-primary fs-6">@size.Name</span>
                                        </td>
                                        <td>@size.Description</td>
                                        <td>@size.DateCreated.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@size.Id" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-edit"></i> Sửa
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@size.Id" class="btn btn-danger btn-sm" 
                                                   onclick="return confirm('Bạn có chắc chắn muốn xóa size này?')">
                                                    <i class="fas fa-trash"></i> Xóa
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center">
                        <p class="text-muted">Chưa có size nào được tạo.</p>
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus"></i> Thêm size đầu tiên
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
