@model IEnumerable<shopping_tutorial.Models.ColorModel>
@{
    ViewData["Title"] = "Quản lý màu sắc";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h4>Danh sách màu sắc</h4>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Thêm màu sắc
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Tên màu</th>
                                    <th>Mã màu</th>
                                    <th>Màu hiển thị</th>
                                    <th>Mô tả</th>
                                    <th>Ngày tạo</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var color in Model)
                                {
                                    <tr>
                                        <td>@color.Id</td>
                                        <td>@color.Name</td>
                                        <td>@color.ColorCode</td>
                                        <td>
                                            <div style="width: 30px; height: 30px; background-color: @color.ColorCode; border: 1px solid #ccc; border-radius: 3px;"></div>
                                        </td>
                                        <td>@color.Description</td>
                                        <td>@color.DateCreated.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@color.Id" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-edit"></i> Sửa
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@color.Id" class="btn btn-danger btn-sm" 
                                                   onclick="return confirm('Bạn có chắc chắn muốn xóa màu sắc này?')">
                                                    <i class="fas fa-trash"></i> Xóa
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center">
                        <p class="text-muted">Chưa có màu sắc nào được tạo.</p>
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus"></i> Thêm màu sắc đầu tiên
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
